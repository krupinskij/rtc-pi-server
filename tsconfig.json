{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [ "./src/app/*" ],
      "@exception/*": [ "./src/exception/*" ],
      "@locales/*": [ "./src/locales/*" ],
      "@middleware/*": [ "./src/middleware/*" ],
      "/*": [ "./src/*"]
    }
  }
}
